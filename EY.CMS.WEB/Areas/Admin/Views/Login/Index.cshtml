@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="tr" class="default-style layout-fixed layout-navbar-fixed">


<head>
    <title>EY.CMS | CMS PROJECT</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="EY CMS PROJECT" />
    <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">

    <link rel="stylesheet" href="~/fonts/fontawesome.css">
    <link rel="stylesheet" href="~/fonts/ionicons.css">
    <link rel="stylesheet" href="~/fonts/linearicons.css">
    <link rel="stylesheet" href="~/fonts/open-iconic.css">
    <link rel="stylesheet" href="~/fonts/pe-icon-7-stroke.css">
    <link rel="stylesheet" href="~/fonts/feather.css">

    <link rel="stylesheet" href="~/css/bootstrap-material.css">
    <link rel="stylesheet" href="~/css/shreerang-material.css">
    <link rel="stylesheet" href="~/css/uikit.css">
    <link rel="stylesheet" href="~/css/perfect-scrollbar.css">
    <link rel="stylesheet" href="~/css/authentication.css">
    <link rel="stylesheet" href="~/css/toastr.css">
</head>
<body>


    <div class="authentication-wrapper authentication-3">
        <div class="authentication-inner">
            <div class="d-none d-lg-flex col-lg-8 align-items-center ui-bg-cover ui-bg-overlay-container p-5" style="background-image: url('/img/21.jpg');">
                <div class="ui-bg-overlay bg-dark opacity-50"></div>
                <div class="w-100 text-white px-5">
                    <h1 class="display-2 font-weight-bolder mb-4">CMS<br>PROJECT</h1>
                </div>
            </div>

            <div class="d-flex col-lg-4 align-items-center bg-white p-5">

                <div class="d-flex col-sm-7 col-md-5 col-lg-12 px-0 px-xl-4 mx-auto">
                    <div class="w-100">

                        <div class="d-flex justify-content-center align-items-center">
                            <div class="ui-w-60">
                                <div class="w-100 position-relative">
                                    <img src="assets/img/logo-dark.png" alt="Brand Logo" class="img-fluid">
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>

                        <h4 class="text-center text-lighter font-weight-normal mt-5 mb-0">Hesabınıza Gİriş Yapın</h4>

                        <div class="my-5">
                            <div class="form-group">
                                <label class="form-label">Kullanıcı adı</label>
                                <input type="text" id="username" class="form-control">
                                <div class="clearfix"></div>
                            </div>
                            <div class="form-group">
                                <label class="form-label d-flex justify-content-between align-items-end">
                                    <span>Şifre</span>
                                </label>
                                <input type="password" id="password" class="form-control">
                                <div class="clearfix"></div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center m-0">
                                <label class="custom-control custom-checkbox m-0">
                                    <input type="checkbox" class="custom-control-input">
                                    <span class="custom-control-label">Beni Hatırla</span>
                                </label>
                                <button type="button"  onclick=Login() class="btn btn-primary">Giriş Yap</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <script src="~/js/pace.js"></script>
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/libs/popper/popper.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/sidenav.js"></script>
    <script src="~/js/layout-helpers.js"></script>
    <script src="~/js/material-ripple.js"></script>
    <script src="~/js/perfect-scrollbar.js"></script>
    <script src="~/js/analytics.js"></script>
    <script src="~/js/toastr.js"></script>
    <script src="~/js/Utilites.js"></script>
</body>

</html>


<script>
    function Login() {
        var userName = $("#username").val();
        var password = $("#password").val();

        if (userName == "") {

            Notify("Kullanıcı adınızı giriniz", "error");
            return;
        }

        if (password == "") {
            Notify("Şifrenizi giriniz", "error");
            return;
        }

        $.ajax({
            type: "Post",
            url: "/Admin/Login/Login",
            data: { UserName: userName, Password: password }

        }).then(function (response) {
            if (response) {
                Notify("Lütfen bekleyiniz", "success");
                setTimeout(function () {
                    window.location.href = "/Admin/Home";
                }, 2000);

            } else {

                Notify("Bilgilerinizi kontrol ediniz", "error");
            }

        })

    }
</script>

