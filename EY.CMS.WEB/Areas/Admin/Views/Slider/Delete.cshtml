@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}
@model EY.CMS.CORE.DTOs.SliderDto
<div class="container-fluid flex-grow-1 container-p-y">
    <div class="card mb-4">
        <h6 class="card-header">Silmek istediğinize eminmisinz ?</h6>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="form-label">Slider Adı</label>
                    <input type="text" class="form-control" readonly id="Name" value="@Model.Name">
                    <div class="clearfix"></div>
                </div>
                <div class="form-group col-md-4">
                    <label class="form-label">Slider resim</label>
                    <img src=~/img/slider_img/@Model.Image width="100" height="100" />
                    <div class="clearfix"></div>
                </div>
            </div>

            <button type="button" onclick="SliderDelete()" class="btn btn-primary">Sil</button>
            <a href="/admin/slider" class="btn btn-primary">Geri</a>
        </div>


    </div>
</div>

<script>

    function SliderDelete() {
         $.ajax({
                 url: "/admin/slider/SliderDelete",
                 type: "POST",
                 processData: false,
                 contentType: false,

             }).then(function (response) {

                 if (response) {
                     Notify("Silme işlemi başarılı", "success");

                     setTimeout(function () {
                         window.location.href = "/admin/slider"
                     }, 2000)
                 }
                 else{
                      Notify("İşlem sırasında bir sorun oluştu", "error");
                 }

             }).fail(function (response) {
                  Notify("İşlem sırasında bir sorun oluştu", "error");
             })
         }

</script>
