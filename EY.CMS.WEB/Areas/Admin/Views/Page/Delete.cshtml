@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_adminLayout.cshtml";
}

@model EY.CMS.CORE.DTOs.PageDto
<div class="container-fluid flex-grow-1 container-p-y">
    <div class="card mb-4">
        <h6 class="card-header">Silmek istediğinize eminmisinz ?</h6>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="form-label">Sayfa Adı</label>
                    <input type="text" class="form-control" readonly id="Name" value="@Model.Name">
                    <div class="clearfix"></div>
                </div>
            </div>

            <button type="button" onclick="PageDelete()" class="btn btn-primary">Sil</button>
            <a href="/admin/page" class="btn btn-primary">Geri</a>
        </div>


    </div>
</div>

<script>

    function PageDelete() {
         $.ajax({
                 url: "/admin/page/PageDelete",
                 type: "POST",
                 processData: false,
                 contentType: false,

             }).then(function (response) {

                 if (response) {
                     Notify("Silme işlemi başarılı", "success");

                     setTimeout(function () {
                         window.location.href = "/admin/page"
                     }, 2000)
                 }
                 else{
                      Notify("İşlem sırasında bir sorun oluştu", "error");
                 }

             }).fail(function (response) {
                  Notify("İşlem sırasında bir sorun oluştu", "error");
             })
         }

</script>



